<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
       <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" ifconfig="Form/general/enable" name="Formval-link"> 
            <arguments>
                 <argument name="label" xsi:type="string" translate="true">Formval</argument>
                 <argument name="path" xsi:type="string">Formval</argument>
             
            </arguments>
        </block>
        
      </referenceBlock>
       <referenceContainer name="content">
        <block class="Form\Formval\Block\Article"
            name="articleData"
                template="Form_Formval::view.phtml" />
    </referenceContainer>
    </body>
</page>
